<div class='container'>
	<div class="row">
		<div class="col-xs-12 text-center">
			<div>Signup</div>
			<form ng-submit="signup()">
				<input type="text" placeholder="name" ng-model="person.name"><br/>
				<input type="text" placeholder="email address" ng-model="person.email"><br/>
				<input type="password" placeholder="password" ng-model="person.password"><br/>
				<button>Submit</button>
			</form>
		</div>
	</div>
</div>